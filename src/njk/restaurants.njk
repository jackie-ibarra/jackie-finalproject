{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Check out all the cool places to eat in Austin!</h1>
  <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Doloribus aliquid repudiandae quia tempore tempora dolor aspernatur est maxime corrupti rerum, ut sunt provident cum animi. Voluptates adipisci consequuntur in vero.</p>
  <div class="row">
    <div class="container p-2">
    {% for restaurants in eating.restaurants %}
    <div class="card border-dark mb-4">
    <div class="row g-0">
      <div class="col-lg-4">
        <img src="img/{{ restaurants.image }}" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-lg-8">
        <div class="card-body">
          <h5 class="card-title">{{ restaurants.name }}</h5>
          <h6 class="card-subtitle text-muted">{{ restaurants.address }}</h6>
          <p class="card-text">{{ restaurants.category }}</p>
        </div>
      </div>
  </div>
</div>
    {% endfor %}
</div>
</article>
{% endblock %}