{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} Landmarks {% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="blog col-lg-6">
        <h5>{{ name }}</h5>
        <h6> {{established }} </h6>
        <p> {{description | safe}} </p>
      </div>
      <div class="col-lg-6">
        <img src="../img/{{ imagebw }}" alt="" class="img-fluid mb-4">
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}